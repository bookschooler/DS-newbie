def preprocess_korean(text, min_length=2):
    """
    í•œê¸€ í…ìŠ¤íŠ¸ ì „ì²˜ë¦¬ íŒŒì´í”„ë¼ì¸
    
    Args:
        text (str): ì›ë³¸ í…ìŠ¤íŠ¸
        min_length (int): ìµœì†Œ ë‹¨ì–´ ê¸¸ì´
    
    Returns:
        list: ì „ì²˜ë¦¬ëœ í† í° ë¦¬ìŠ¤íŠ¸
    """
    okt = Okt()
    
    # 1. íŠ¹ìˆ˜ë¬¸ì ì œê±° (í•œê¸€, ì˜ì–´, ìˆ«ì, ê³µë°±ë§Œ ìœ ì§€)
    text = re.sub(r'[^ê°€-í£a-zA-Z0-9\s]', '', text)
    
    # 2. ì¤‘ë³µ ê³µë°± ì œê±°
    text = re.sub(r'\s+', ' ', text).strip()
    
    # 3. í˜•íƒœì†Œ ë¶„ì„ (ì •ê·œí™” + ì–´ê°„ ì¶”ì¶œ)
    tokens = okt.morphs(text, norm=True, stem=True)
    
    # 4. ë¶ˆìš©ì–´ ì œê±° (í•œê¸€ ì¡°ì‚¬, ì–´ë¯¸ ë“±)
    korean_stopwords = {'ì€', 'ëŠ”', 'ì´', 'ê°€', 'ì„', 'ë¥¼', 'ì˜', 'ì—', 'ì—ì„œ', 
                        'ë¡œ', 'ìœ¼ë¡œ', 'ë„', 'ë§Œ', 'ê³¼', 'ì™€', 'í•˜ë‹¤', 'ìˆë‹¤', 'ë˜ë‹¤'}
    tokens = [t for t in tokens if t not in korean_stopwords]
    
    # 5. ìµœì†Œ ê¸¸ì´ í•„í„°ë§
    tokens = [t for t in tokens if len(t) >= min_length]
    
    return tokens

